<h1>EDIT POST</h1>

<div class="row text-center">
    <div class="col">
      
        <form method="post" action="/places/<%= place_id %>/posts/<%= post._id %>?_method=PATCH">
            <div class="form-group">
                <label for="title">Title</label>
                <input name="title"  id="title" type="text" class="form-control" value=<%=post.title%>>
            </div>
            <div class="form-group">
                <label for="body">Body:</label>
                <!-- <input type="body" name="body" id="body" class="form-control" > -->
                <textarea id="body" name="body" class="form-control" value=<%=post.body%>></textarea>
            </div>
        <button type="submit"> Submit</button>
          <!-- // <a href="/places/<%= place_id %>/posts/<%= post._id %>"  </a> -->
        </form>
    </div>
</div>